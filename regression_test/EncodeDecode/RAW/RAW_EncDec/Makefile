# The name of the executable test suite:
TARGET = RAW_EncDec.exe

ifeq ($(COVERAGE), yes)
CPPFLAGS += -fprofile-arcs -ftest-coverage -g
CXXFLAGS += -fprofile-arcs -ftest-coverage -g
