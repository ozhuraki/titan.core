//=== Enum ====

testcase tc_attr_enum_no_attr() runs on CT {
  var E x := e2, z;
  var bitstring expected := oct2bit(char2oct("\"e2\""));
  var bitstring encoded := encvalue(x);
  log(x);
  log(bit2oct(encoded));
  f_compare_bitstring(expected,encoded);

  var integer r := decvalue(expected, z);
  if (r==0 and x==z){
    setverdict(pass);
  } else {
    setverdict(fail);
  }
}

